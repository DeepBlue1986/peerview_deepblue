<div class="container">
<h1>Create new assignment</h1>
  <div class="row" style="margin-right: 200px;">
      <%= simple_form_for([@teacher, @assignment]) do |f| %>
      <%= f.input :topic_id, label: 'Topic' , :collection => Topic.order(:name), :prompt => 'Choose a topic'  %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :specs  %>
      <%= f.input :deadline  %>
      <%= f.input :classroom_id, collection: Classroom.all %>
      <%= f.input :attachment %>
      <%= f.input :attachment_cache, as: :hidden %>

      <%= f.button :submit, class: 'btn btn-success' %>
      <% end %>
</div>
</div>

