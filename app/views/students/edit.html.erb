<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
      <div class="text-center">
      <h3>Edit your profile</h3>
      </div>
      <br>
      <br>
      <%= simple_form_for(@student) do |f| %>
      <%= f.input :email %>
      <%= f.input :first_name %>
      <%= f.input :last_name  %>
      <%= f.input :description %>
      <%= f.input :date_of_birth, as: :date %>
      <%= f.input :city %>
      <%= f.input :classroom_id, collection: Classroom.all %>
      <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
      <br>
      <%= link_to "Change password", edit_student_registration_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
