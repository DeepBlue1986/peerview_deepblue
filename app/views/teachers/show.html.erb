<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-3">
      <h1>Teacher profile</h1>
      <p><strong>Name:</strong> <%= @teacher.first_name %> <%= @teacher.last_name %></p>
      <p><strong>Email:</strong> <%= @teacher.email %></p>
      <p><strong>City:</strong> <%= @teacher.city %></p>
      <p><strong>Description:</strong> <%= @teacher.description %></p>
      <br>
      <%= link_to 'Update profile',  edit_teacher_path, class: 'btn btn-success' %>

    </div>
  </div>
</div>
